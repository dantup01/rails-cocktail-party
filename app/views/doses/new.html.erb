<div class="container">
  <h1>Add your ingredients</h1>

  <%= simple_form_for([@cocktail, @dose]) do |f| %>
    <%= f.input :ingredient_id, collection: Ingredient.order(:name) %>
    <%= f.input :description, label: 'Add the quantity', as: :text %>
    <%= f.submit "Add ingredient", value: 'Add Ingredient', class: "btn btn-primary"%>
    <%= link_to "Go Back", cocktail_path(@cocktail), class: 'btn btn-primary' %>
  <% end %>
</div>

